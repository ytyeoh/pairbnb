          <input type="text" name="long_url" placeholder="Enter url">
            </div>

           <button type="submit" value="Submit" class="btn btn-success">Convert</button>
          </form>
          
        </div><!--/.navbar-collapse -->
      </div>
    </nav>
<%= yield %>

</body>
</html>
