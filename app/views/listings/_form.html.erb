<%= form_for :@listing, url: {action: "create"} , html: { multipart: true, class: "form-horizontal"} do |form| %>
	<div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, type: 'string' , class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :Descriptiom %>
    <%= form.text_field  :desc, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :Tag %>
    <%= form.text_field  :all_tags, class:'form-control' , placeholder: "Tags separated with comma" %>
  </div>

  <div class="form-group">
    <%= form.label :Room_Type %>
    <%= form.text_field  :room_type, class:'form-control'  %>
  </div>

  <div class="form-group">
    <%= form.label :Accommodates %>
    <%= form.number_field  :accommodates, class:'form-control'  %>
  </div>

  <div class="form-group">
    <%= form.label :Price %>
    <%= form.number_field  :price, class:'form-control'  %>
  </div>

  <div class="form-group">
    <%= form.label :Location %>
    <%= form.text_field  :location, class:'form-control'  %>
  </div>

  <div class="form-group">
    <%= form.label :Price %>
    <%= form.number_field  :price, class:'form-control'  %>
  </div>

  <div class="form-group">
    <%= form.label :Upload_image %>
    <%= form.file_field :avatars, multiple: true %>
  </div>

  <div class="form-group">
    <%= form.submit "Create New Room", class: 'btn btn-primary' %>
  </div>

 


<% end %>
