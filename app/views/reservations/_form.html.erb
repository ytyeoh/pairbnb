<%= form_for :@reservation, url: {action: "create"} , html: { multipart: true, class: "form-horizontal"} do |form| %>
	<div class="form-group col-xs-3">
    <%= form.label :check_in %>
    <%= form.text_field :check_in, type: 'text' , class:'form-control date', 'data-behaviour' => 'datepicker' %>
	</div>
  <script type="text/javascript">
            $(function () {
           
                $('.date').datetimepicker({
                  format: 'DD/MM/YYYY'
                });
            });
        </script>
  <div class="form-group col-xs-3">
    <%= form.label :check_out %>
    <%= form.text_field :check_out, type: 'text' , class:'form-control date' %>
	</div>
	
  <div class="form-group col-xs-2">
    <%= form.label :Guests %>
    <%= form.number_field  :guests, class:'form-control'  %>
  </div>

  

  <div class="form-group col-xs-6">
    <%= form.submit "Instant Book", class: 'btn btn-primary' %>
  </div>

<% end %>


